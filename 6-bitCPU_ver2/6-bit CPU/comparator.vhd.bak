-- 

LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY comparator IS
	PORT(
		A : IN STD_LOGIC_VECTOR(3 DOWNTO 0);
		B : IN STD_LOGIC_VECTOR(3 DOWNTO 0);
		Q : OUT STD_LOGIC
	);
END comparator;

ARCHITECTURE SYN OF comparator IS
BEGIN
	PROCESS(A, B)
	BEGIN
		IF A > "0000" THEN
			IF B > "0000" THEN
				IF (A+1) = B THEN
					Q <= '1';
				ELSE
					Q <= '0';
				END IF;
			END IF;
		END IF;
	END PROCESS;
END SYN;